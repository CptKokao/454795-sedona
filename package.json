{
  "name": "sedona",
  "version": "0.1.0",
  "private": true,
  "description": "Личный проект Седона от HTML Academy",
  "devDependencies": {},
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"less/**/*.less\" --syntax less",
    "test": "npm run editorconfig && npm run stylelint",
    "build": "gulp style",
    "start": "gulp serve"
  },
  "browserslist": [
    "last 2 versions",
    "IE 11",
    "Firefox ESR"
  ],
  "editorconfig-cli": [
    "*.html",
    "*.json",
    "*.js",
    "js/**/*.js",
    "img/**/*.svg",
    "less/**/*.less"
  ],
  "engines": {
    "node": "8.2"
  }
}
